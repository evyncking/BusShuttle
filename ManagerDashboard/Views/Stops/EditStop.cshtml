@model ManagerDashboard.Models.StopModel

<h2>Edit Stop</h2>

<form asp-action="EditStop" asp-controller="ManagerDashboard" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="stopName">Enter new stop:</label>
        <input type="text" class="form-control" id="stopName" name="StopName" value="@Model.StopName" required>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
