@model StopModel

<h2>Create a New Stop</h2>

<form asp-action="AddStop" asp-controller="ManagerDashboard" method="post">
    <div class="form-group">
        <label for="stopName">Enter Stop Name:</label>
        <input type="text" class="form-control" id="stopName" name="StopName" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
