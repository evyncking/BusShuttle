@model ManagerDashboard.Models.StopModel

<h2>Delete Stop</h2>

<p>Are you sure you want to delete this stop?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Stop Name:</dt>
        <dd class="col-sm-10">@Model.StopName</dd>
    </dl>

    <form asp-action="DeleteStopConfirmed" asp-controller="ManagerDashboard" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ListStops" asp-controller="ManagerDashboard" class="btn btn-secondary">Cancel</a>
    </form>
</div>
