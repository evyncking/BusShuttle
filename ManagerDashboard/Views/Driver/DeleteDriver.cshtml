@model ManagerDashboard.Models.DriverModel

<h2>Delete Driver</h2>

<form asp-action="DeleteDriverConfirmed" asp-controller="ManagerDashboard" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <p>Are you sure you want to delete this driver?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/ManagerDashboard/Index" class="btn btn-secondary">Cancel</a>
</form>
