@model IEnumerable<ManagerDashboard.Models.DriverModel>

<div class="text-center">
    <h1 style="color: red;" class="display-4">Drivers</h1>
    <a class="btn btn-primary" href="/ManagerDashboard/AddDriver">New Driver</a>
</div>

<div class="container">
    <h2>Existing Drivers</h2>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>Password</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var driver in Model)
                {
                    <tr>
                        <td>@driver.FirstName</td>
                        <td>@driver.LastName</td>
                        <td>@driver.Username</td>
                        <td>@driver.Password</td>
                        <td>
                            <a class="btn btn-primary" href="/ManagerDashboard/EditDriver?id=@driver.Id">Edit</a>
                            <a class="btn btn-danger" href="/ManagerDashboard/DeleteDriver?id=@driver.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5">No drivers found</td></tr>
            }
        </tbody>
    </table>
</div>
