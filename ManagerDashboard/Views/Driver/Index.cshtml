@model IEnumerable<DriverModel>

<div class="text-center">
    <h1 style="color: red;" class="display-4">Drivers</h1>
    <a class="btn btn-primary" href="/ManagerDashboard/AddDriver">New Driver</a>
</div>

<div class="container">
    <h2>Existing Drivers</h2>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var driver in Model.Select((value, index) => new { Value = value, Index = index }))
                {
                    <tr>
                        <td>@driver.Value.FirstName</td>
                        <td>@driver.Value.LastName</td>
                        <td>@driver.Value.Username</td>
                        <td>@driver.Value.Password</td>
                        <td>
                            <a class="btn btn-primary" href="/ManagerDashboard/EditDriver?index=@driver.Index">Edit</a>
                            <a class="btn btn-danger" href="/ManagerDashboard/DeleteDriver?index=@driver.Index">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5">No drivers found</td></tr>
            }
        </tbody>
    </table>
</div>
