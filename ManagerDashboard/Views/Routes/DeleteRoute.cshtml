@model RouteModel

<h2>Delete Route</h2>

<p>Are you sure you want to delete this route?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Loop Id:</dt>
        <dd class="col-sm-10">@Model.LoopId</dd>
        <!-- Add other route details as needed -->
    </dl>

    <form asp-action="DeleteRoute" asp-controller="ManagerDashboard" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ListRoutes" asp-controller="ManagerDashboard" class="btn btn-secondary">Cancel</a>
    </form>
</div>
