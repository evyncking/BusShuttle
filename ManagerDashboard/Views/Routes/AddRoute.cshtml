@model ManagerDashboard.Models.RouteModel

<h2>Create a new route</h2>

<form asp-action="AddRoute" asp-controller="ManagerDashboard" method="post">
    <div class="form-group">
        <label for="loopId">Select a loop:</label>
        <select class="form-control" id="loopId" name="LoopId" required>
            @foreach (var loop in ViewBag.Loops)
            {
                <option value="@loop.Value">@loop.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="stopId">Select a stop:</label>
        <select class="form-control" id="stopId" name="StopId" required>
            @foreach (var stop in ViewBag.Stops)
            {
                <option value="@stop.Value">@stop.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
