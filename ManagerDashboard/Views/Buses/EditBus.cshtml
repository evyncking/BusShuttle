@model ManagerDashboard.Models.BusModel

<h2>Edit Bus</h2>

<form asp-action="EditBus" asp-controller="ManagerDashboard" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="busNumber">Enter new bus:</label>
        <input type="text" class="form-control" id="busNumber" name="BusNumber" value="@Model.BusNumber" required>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
