@model ManagerDashboard.Models.BusModel

<h2>Delete Bus</h2>

<p>Are you sure you want to delete this bus?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Bus Number:</dt>
        <dd class="col-sm-10">@Model.BusNumber</dd>
    </dl>

    <form asp-action="DeleteBusConfirmed" asp-controller="ManagerDashboard" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ListBuses" asp-controller="ManagerDashboard" class="btn btn-secondary">Cancel</a>
    </form>
</div>
